{
  "name": "ts_template",
  "description": "Project bootstrapped using [NodeJS Starter ToolKit](https://github.com/vitorsalgado/create-nodejs-ts). Visit the repository for more details.",
  "version": "1.0.14",
  "author": "Costas Kirgoussios",
  "license": "MIT",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/browser/my-package.esm.js",
  "types": "dist/main.d.ts",
  "start": "node dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon --ext js,ts,json,env --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main.ts",
    "prepare": "husky",
    "build:node": "tsc --project tsconfig.build.json",
    "build:gas": "webpack --config webpack.config.gas.cjs",
    "build:browser": "webpack --config webpack.config.browser.cjs",
    "build:clean": "del-cli tsconfig.build.tsbuildinfo && del-cli ./dist dist/gas dist/browser",
    "build:all": "npm run build:clean && npm run build:node && npm run build:gas && npm run build:browser",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check",
    "deploy:gas": "npm run build:gas && clasp push"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.0",
    "@eslint/compat": "2.0.2",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@jest/globals": "30.2.0",
    "@jest/types": "30.2.0",
    "@types/google-apps-script": "^2.0.8",
    "@types/jest": "30.0.0",
    "@types/node": "25.2.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "clasp": "^1.0.0",
    "cross-env": "10.1.0",
    "crypto-browserify": "^3.12.1",
    "del-cli": "7.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-tsdoc": "0.5.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "nodemon": "3.1.11",
    "path-browserify": "^1.0.1",
    "prettier": "3.8.0",
    "stream-http": "^3.2.0",
    "supertest": "7.2.2",
    "terser-webpack-plugin": "^5.3.16",
    "ts-jest": "29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}
